<h1>Create your new destination</h1>

<%= form_for @destination, url: destinations_path, html: { method: :post } do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :address %>
  <%= f.text_field :address %>
  <%= f.check_box :visited %>
  <%= f.label :rating %>
  <%= f.number_field :rating %>
  <%= f.submit %>
<% end %>

<p><%= link_to "Return to destinations", destinations_path, class: "btn btn-primary blue-btn"%></p>

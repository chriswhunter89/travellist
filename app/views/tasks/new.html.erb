<div id="new-task-page">
  <div class="new-task-form">
    <div class="form-content">
      <h1>Create your new task</h1>

      <%= simple_form_for [@post, Task.new] do |f| %>
      <%= f.input :title %>
      <%= f.input :notes %>
      <%= f.button :submit, class: "btn btn-primary" %>
      <% end %>

      <%= link_to "Return to homepage", authenticated_root_path, class: "btn btn-primary blue-btn"%>
    </div>
  </div>
</div>

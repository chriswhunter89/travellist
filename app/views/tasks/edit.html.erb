<div id="edit-task-page">
  <div class="edit-task-form">
    <div class="form-content">
      <h1>Edit your task</h1>
      <%= simple_form_for([@destination, @task]) do |f| %>
      <%= f.input :title,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "Task title" } %>
      <%= f.input :notes,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "Task notes" } %>
        <%= f.button :submit, "Edit task", class: "edit-task-btn" %>
      <% end %>
<p><%= link_to "Return to dashboard", authenticated_root_path, class: "btn btn-primary blue-btn"%></p>
    </div>
  </div>
</div>
